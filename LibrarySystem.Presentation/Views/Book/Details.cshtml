@model LibrarySystem.BusinessLogic.Books.DTOs.BookDto
@{
    ViewData["Title"] = "Book Details";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0">@Model.Title</h2>
            <span class="badge @(Model.IsBorrowed ? "bg-warning" : "bg-success")">
                @(Model.IsBorrowed ? "Borrowed" : "Available")
            </span>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <div class="bg-light p-4 rounded">
                        <i class="fas fa-book-open fa-4x text-primary mb-3"></i>
                        <p class="mb-1"><strong>ISBN:</strong></p>
                        <p class="text-muted">@Model.ISBN</p>
                    </div>
                </div>

                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">Author:</dt>
                        <dd class="col-sm-8">@Model.Author</dd>

                        <dt class="col-sm-4">Added Date:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-4">Description:</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="card-footer bg-transparent border-top-0">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Back to List
                </a>

                @if (User.Identity?.IsAuthenticated ?? false)
                {
                    <div class="btn-group" role="group">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>

                        @if (Model.IsBorrowed)
                        {
                            <form asp-action="Return" asp-route-id="@Model.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-book-return me-1"></i> Return
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Borrow" asp-route-id="@Model.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-book-reader me-1"></i> Borrow
                                </button>
                            </form>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
        }

        .card-header {
            border-radius: 0.5rem 0.5rem 0 0 !important;
        }

        dt {
            font-weight: 600;
            color: #6c757d;
        }

        dd {
            margin-bottom: 0.75rem;
        }
    </style>
}